def first_and_last(arr, target):
        for i in range(len(arr)):       # this is to traverse an array
                if arr[i] == target:
                        start = i
                        while i+1 < len(arr) and arr[i+1] == target:    # Breaking point
                                i += 1
                        return [start, i]
        return [-1, -1]

# This is to find first and last position of a target number in an array.
